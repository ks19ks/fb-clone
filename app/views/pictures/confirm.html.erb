<div class="row">
  <div class="col">
    <h1>Confirmation</h1>
    <%= form_with(model: @picture, url: pictures_path, local: true) do |form| %>
      <div class="card">
        <div class="card-body">
          <div class="form-group">
            <%= image_tag(@picture.image.url, class: 'img-fluid') if @picture.image && @picture.image.url %>
            <%= form.hidden_field :image_cache %>
          </div>
          <div class="form-group">
            <p class="card-title">Comment</p>
            <p class="card-text"><%= @picture.comment %></p>
            <%= form.hidden_field :comment %>
          </div>
          <%= form.submit 'Post', class: 'btn btn-light' %>
        </div>
      </div>
    <% end %>
    <%= form_with(model: @picture, url: new_picture_path, local: true, method: 'get') do |form| %>
      <%= form.hidden_field :image_cache %>
      <%= form.hidden_field :comment %>
      <%= form.submit 'Back', name: 'back', class: 'btn btn-link' %>
    <% end %>
  </div>
</div>
