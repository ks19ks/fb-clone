<%= form_with(model: picture, local: true, url: choose_new_or_edit) do |form| %>
  <% if picture.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(picture.errors.count, "error") %> prohibited this picture from being saved:</h4>
      <ul>
      <% picture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card social-timeline-card">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="images-tab" data-toggle="tab" role="tab" aria-controls="images" aria-selected="true" href="#images">Share Images</a>
        </li>
      </ul>
    </div>
    <div class="card-body">
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade active show" id="images" role="tabpanel" aria-labelledby="images-tab">
                <div class="form-group">
                    <div class="custom-file">
                        <%= form.label :image, 'Choose file', class: 'custom-file-label' %>
                        <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
                        <%= form.file_field :image, class: 'custom-file-input' %>
                        <%= form.hidden_field :image_cache %>
                    </div>
                </div>
                <div class="form-group">
                    <%= form.label :comment %>
                    <%= form.text_area :comment, class: 'form-control', rows: '3', placeholder: 'What is the story?' %>
                </div>
            </div>
        </div>
        <div class="btn-toolbar justify-content-between">
            <div class="btn-group">
                <%= form.submit 'Post', class: 'btn btn-light' %>
            </div>
        </div>
    </div>
  </div>
<% end %>
